<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.seoul.zero.app.model.mapper.BoardMapper">

    <!-- 게시판 글 목록 출력 -->
    <select id="boardList" resultType="com.seoul.zero.app.model.vo.Board">
        select bno, title, time, readcount from board
    </select>

    <!-- 특정 번호 게시판 상세보기 -->
    <select id="detailBoard" resultType="com.seoul.zero.app.model.vo.Board" parameterType="com.seoul.zero.app.model.vo.Board">
        select * from board where bno = #{bno}
    </select>

    <!-- 조회수 증가 -->
    <update id="plusCount" parameterType="com.seoul.zero.app.model.vo.Board">
        update board set readcount = readcount + 1 where bno=#{bno}
    </update>
</mapper>